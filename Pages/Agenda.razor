@page "/agenda"

<h3>What's new in Blazor with .NET 5 ??</h3>
<hr>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">Developer Experience Updates</div>
            <div class="card-content">
                <ul>
                    @foreach (var item in devExDemoItems)
                    {
                        <div><span class="oi oi-check"></span>&nbsp;&nbsp;@item</div>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header">Perf Improvement updates</div>
            <div class="card-content">
                <ul>
                    @foreach (var item in perfDemoItems)
                    {
                        <div><span class="oi oi-check"></span>&nbsp;&nbsp;@item</div>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    private List<string> devExDemoItems { get; set; }

    private List<string> perfDemoItems { get; set; }

    protected override void OnInitialized()
    {
        devExDemoItems = new List<string>();
        perfDemoItems = new List<string>();
        perfDemoItems.AddRange(new List<string> { "Virtualization", "LazyLoading", "Prerendering" });
        devExDemoItems.AddRange(new List<string> {
"Better Debugging", "Auto Refresh", "CSS Isolation",
"Input File Support", "Azure Static site support" });
    }



}
